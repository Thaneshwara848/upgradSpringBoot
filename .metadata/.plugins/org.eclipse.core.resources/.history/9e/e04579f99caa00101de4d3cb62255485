package com.example.demo.controllers;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RestController;

import com.example.demo.model.Employee;
import com.example.demo.repo.MyRepo;

@RestController
public class MyController {

	@Autowired
	private MyRepo repo;
								// APis , http request and responce 
	@GetMapping("/getAllEmployee")
	public List<Employee> getAllEMployee() {
		return	repo.findAll();
	}
	
	@GetMapping("/getAllEmployeeById/{uid}")
	public Optional<Employee> allEmployeeById(@PathVariable int uid) {  
//        return repo.findById(uid);
    }
	@PostMapping("addEmployee")
	public String addEmployees(@RequestBody Employee myemps) {
		repo.save(myemps);
	return  "Employee Added Successfully....!";
	}
	
	@DeleteMapping("deleteById/{id}")
	public String deleteEMployeeById(@PathVariable int id) {	
		repo.deleteById(id);
		return "EMployee Deleted Succssfully";
	}
	@DeleteMapping("deleteAll")
	public String deleteAllEMployeeById() {
		repo.deleteAll();
		return "EMployee Deleted Succssfully";
	}
	 @PutMapping("/updateEmployee/{id}")
	  public String updateEmployee(@PathVariable int id, @RequestBody Employee updatedEmp) {
	        // Check if employee exists
	        Optional<Employee> existing = repo.findById(id);
	        if (existing.isPresent()) {
	            Employee emp = existing.get();
	            emp.setName(updatedEmp.getName());
	            emp.setAge(updatedEmp.getAge());
	            emp.setSalary(updatedEmp.getSalary());
	            emp.setDesig(updatedEmp.getDesig());
	            repo.save(emp);
	            return "Employee Updated Successfully!";
	        } else {
	            return "Employee Not Found!";
	        }
	    }
}
